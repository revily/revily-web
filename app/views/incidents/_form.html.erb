<%= form_for(@incident, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @incident.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h4>

      <ul>
      <% @incident.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :message, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :message, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :details, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :key, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :key, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_user, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :current_user, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_policy_rule, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :current_policy_rule, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :escalation_loop_count, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :escalation_loop_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :service, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :service, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
