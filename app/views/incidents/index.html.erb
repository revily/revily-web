<div class="page-header">
  <h1>Listing incidents</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Message</th>
            <th>Description</th>
            <th>Details</th>
            <th>State</th>
            <th>Key</th>
            <th>Current user</th>
            <th>Current policy rule</th>
            <th># Times escalated</th>
            <th>Service</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @incidents) do |incident| %>
            <td><%= incident.message %></td>
            <td><%= incident.description %></td>
            <td><%= incident.details %></td>
            <td><%= incident.state %></td>
            <td><%= incident.key %></td>
            <td><%= incident.current_user.name %></td>
            <td><%= incident.current_policy_rule.position %></td>
            <td><%= incident.escalation_loop_count %></td>
            <td><%= incident.service.name %></td>
            <td><%= link_to 'Show', incident %></td>
        <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
        <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
